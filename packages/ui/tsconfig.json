{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "lib": [
            "es2015",
            "dom",
            "dom.iterable"
        ],
        "skipLibCheck": true,
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "declaration": true,
        "outDir": "dist"
    },
    "include": [
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}